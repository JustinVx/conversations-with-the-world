<h1>A conversation with <%= @conversation_partner %></h1>

<div id="messages">
  <% @messages.each do |message| %>
    <div class="message-block">
      <div class="delete"><%= link_to "x", message_path(message), method: :delete, data: {confirm: "Do you really want to delete this message by #{message.author_name}?"}
  %></div>
      <div class="message-text"><%= message.body %></div>
      <% if message.id.to_i % 2 == 0 %>
        <div class="left-side"></div>
        <div class="author"><div class="author-left" ><%= message.author_name %></div></div>
      <% else %>
        <div class="right-side"></div>
        <div class="author"><div class="author-right" ><%= message.author_name %></div></div>
      <% end %>

    </div>
  <% end %>
</div>

<%= render partial: 'messages/form' %>
